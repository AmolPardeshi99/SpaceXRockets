<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceXRockets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryHighEmp</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryHighEmp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextAppearance.SpacexRocket.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/space_mono_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SpacexRocket.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/space_mono_regular</item>
    </style>

    <style name="TextAppearance.SpacexRocket.RocketBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="Widget.SpacexRocket.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.SpacexRocket.Headline</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.SpacexRocket.RocketItemCard" parent="Widget.SpacexRocket.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>
</resources>